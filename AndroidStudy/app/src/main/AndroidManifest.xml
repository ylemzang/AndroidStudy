<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.yyzang.androidstudy" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="me.yyzang.androidstudy.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="me.yyzang.androidstudy.MyActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="me.yyzang.androidstudy.MyActivity" />
        </activity>
    </application>

</manifest>

